{
    "version": 3,
    "configurePresets": [
        {
            "name": "dev-arm64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-23",
                "ANDROID_STL": "c++_static"
            }
        },
        {
            "name": "dev-host-libc++",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++",
                "CXXFLAGS": "-stdlib=libc++"
            }
        },
        {
            "name": "dev-host-stdc++",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "CC": "gcc",
                "CXX": "g++"
            }
        }
    ]
}